	-ISTM32CubeMX/2020c/Middlewares/Third_Party/FatFs/src/drivers \
	-ISTM32CubeMX/2020c/Middlewares/ST/STM32_USB_Device_Library/Core/Inc \
	-Isrc/firmware/usb_device \

