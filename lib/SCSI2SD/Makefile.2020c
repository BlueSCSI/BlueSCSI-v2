# Assume newlib gcc toolchain
ARMCC=arm-none-eabi-gcc
OBJCOPY=arm-none-eabi-objcopy

CPPFLAGS=-DSTM32F205xx -DSTM32F2xx -DUSE_HAL_DRIVER -Wall -DS2S_USB_FS -DREV_2020
CFLAGS=-mcpu=cortex-m3 -mthumb -mslow-flash-data \
	-std=gnu11 \
	-specs=nosys.specs \
	-Os -g \

